{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    // Set baseUrl to project root so we can alias both src and types cleanly
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["types/*"]
    },

    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": ["src", "types", "jest.setup.ts", "vite-env.d.ts"]
}
